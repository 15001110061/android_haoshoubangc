<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/common_grey" >

    <RelativeLayout
        android:id="@+id/rl_nologo_1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <TextView
            android:id="@+id/tv_current_peonumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_current_picture"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dd_dimen_87px"
            android:text="您还没有登录好帮手"
            android:textColor="@color/common_CCCCCC"
            android:textSize="@dimen/dd_dimen_46px" />

        <ImageView
            android:id="@+id/tv_current_picture"
            android:layout_width="@dimen/dd_dimen_233px"
            android:layout_height="@dimen/dd_dimen_233px"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dd_dimen_87px"
            android:src="@drawable/icon_nulog_bg"
            android:textColor="@color/common_CCCCCC"
            android:textSize="@dimen/dd_dimen_32px" />

        <TextView
            android:id="@+id/tv_nolog_log"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dd_dimen_85px"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="@dimen/dd_dimen_50px"
            android:layout_marginLeft="@dimen/dd_dimen_60px"
            android:layout_marginRight="@dimen/dd_dimen_60px"
            android:background="@drawable/shape_home_item_tv_sign_bg"
            android:gravity="center"
            android:text="立即登录"
            android:textColor="@color/common_white"
            android:textSize="@dimen/dd_dimen_36px" />
    </RelativeLayout>

</RelativeLayout>
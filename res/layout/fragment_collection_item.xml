<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/common_grey" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dd_dimen_20px"
        android:layout_marginRight="@dimen/dd_dimen_20px"
        android:layout_marginTop="@dimen/dd_dimen_25px"
        android:background="@drawable/shape_current_item_rl_bg" >

        <ImageView
            android:id="@+id/iv_collection_picture"
            android:layout_width="@dimen/dd_dimen_268px"
            android:layout_height="@dimen/dd_dimen_151px"
            android:layout_centerVertical="true"
            android:layout_marginBottom="@dimen/dd_dimen_40px"
            android:layout_marginLeft="@dimen/dd_dimen_20px"
            android:layout_marginTop="@dimen/dd_dimen_40px"
            android:scaleType="fitXY"
            android:src="@drawable/image_moren" />

        <RelativeLayout
            android:id="@+id/rl_collection_one"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dd_dimen_38px"
            android:layout_marginTop="@dimen/dd_dimen_20px"
            android:layout_toRightOf="@+id/iv_collection_picture"
            android:gravity="center_vertical" >

            <TextView
                android:id="@+id/tv_collection_peonumber"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/iv_collection_tel"
                android:ellipsize="marquee"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:marqueeRepeatLimit="marquee_forever"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/common_text"
                android:textSize="@dimen/dd_dimen_24px" />

            <ImageView
                android:id="@+id/iv_collection_tel"
                android:layout_width="@dimen/dd_dimen_50px"
                android:layout_height="@dimen/dd_dimen_50px"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="@dimen/dd_dimen_20px"
                android:scaleType="fitXY"
                android:src="@drawable/icon_dianhua" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/rl_collection_one"
            android:layout_below="@+id/rl_collection_one"
            android:layout_marginTop="@dimen/dd_dimen_40px"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <RelativeLayout
                android:id="@+id/rl_home_item_c"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1" >

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal" >

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/iv_collection_qiangdan"
                        android:text="抢单"
                        android:textColor="@color/common_message"
                        android:textSize="@dimen/dd_dimen_24px" />

                    <TextView
                        android:id="@+id/iv_collection_qiangdan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="0"
                        android:textColor="@color/common_yellow"
                        android:textSize="@dimen/dd_dimen_24px" />
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_home_item_d"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center" >

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/iv_collection_hezuo"
                        android:text="合作"
                        android:textColor="@color/common_message"
                        android:textSize="@dimen/dd_dimen_24px" />

                    <TextView
                        android:id="@+id/iv_collection_hezuo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="0"
                        android:textColor="@color/common_yellow"
                        android:textSize="@dimen/dd_dimen_24px" />
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_home_item_e"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center" >

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/iv_collection_shouru"
                        android:text="收入"
                        android:textColor="@color/common_message"
                        android:textSize="@dimen/dd_dimen_24px" />

                    <TextView
                        android:id="@+id/iv_collection_shouru"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="0"
                        android:textColor="@color/common_yellow"
                        android:textSize="@dimen/dd_dimen_24px" />
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/common_white" >

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dd_dimen_20px"
        android:layout_marginRight="@dimen/dd_dimen_20px"
        android:layout_marginTop="@dimen/dd_dimen_25px" >

        <ImageView
            android:id="@+id/tv_new_picture"
            android:layout_width="@dimen/dd_dimen_260px"
            android:layout_height="@dimen/dd_dimen_146px"
            android:layout_centerVertical="true"
            android:contentDescription="@string/app_name"
            android:scaleType="fitXY"
            android:src="@drawable/icon_nor_user" />

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dd_dimen_20px"
            android:layout_toRightOf="@id/tv_new_picture"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_new_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="Title"
                android:textSize="@dimen/dd_dimen_30px" />

            <TextView
                android:id="@+id/tv_new_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dd_dimen_10px"
                android:lines="2"
                android:text="Message"
                android:textColor="@color/common_message"
                android:textSize="@dimen/dd_dimen_26px" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_new_checking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_new_picture"
            android:layout_alignParentRight="true"
            android:text="查看0"
            android:textColor="@color/common_FF971E"
            android:textSize="@dimen/dd_dimen_24px" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dd_dimen_1px"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/relativeLayout1"
        android:layout_marginTop="@dimen/dd_dimen_25px"
        android:background="@color/devide_line" />

</RelativeLayout>
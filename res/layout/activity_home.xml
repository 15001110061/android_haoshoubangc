<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_signet_two"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_grey"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:background="@color/common_white"
        android:gravity="center_vertical" >

        <LinearLayout
            android:id="@+id/ll_title_left"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:gravity="center_vertical|left"
            android:minWidth="@dimen/dd_dimen_40px"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_title_left"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center_vertical|left"
                android:paddingLeft="@dimen/dd_dimen_20px"
                android:text="选择城市"
                android:textColor="@color/common_FF971E"
                android:textSize="@dimen/dd_dimen_28px" />

            <ImageView
                android:id="@+id/iv_title_left"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginLeft="@dimen/dd_dimen_10px"
                android:paddingBottom="@dimen/dd_dimen_20px"
                android:paddingLeft="@dimen/dd_dimen_2px"
                android:paddingRight="@dimen/dd_dimen_20px"
                android:paddingTop="@dimen/dd_dimen_20px"
                android:src="@drawable/ison_jiantoucity" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_title_right"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:gravity="center_vertical|right"
            android:minWidth="@dimen/dd_dimen_40px"
            android:orientation="horizontal"
            android:visibility="visible" >

            <ImageView
                android:id="@+id/iv_title_right"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:padding="@dimen/dd_dimen_25px"
                android:src="@drawable/icon_shuaxin" />

            <TextView
                android:id="@+id/tv_title_right"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center_vertical|right"
                android:paddingRight="@dimen/dd_dimen_20px"
                android:text="New Text"
                android:textColor="@color/common_white"
                android:textSize="@dimen/dd_dimen_32px"
                android:visibility="gone" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dd_dimen_26px"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="好手帮"
            android:textColor="@color/common_text"
            android:textSize="@dimen/dd_dimen_32px" />
    </RelativeLayout>

    <View
        android:id="@+id/v_line"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dd_dimen_1px"
        android:layout_below="@+id/rl_title"
        android:layout_gravity="center_vertical"
        android:background="@color/common_grey" />

    <RelativeLayout
        android:id="@+id/rl_home_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/v_line"
        android:background="@drawable/icon_home_bgs"
        android:orientation="vertical"
        android:visibility="gone" >

        <com.cgzz.job.view.ScaleGallery
            android:id="@+id/gallery"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/tv_home_item_sign"
            android:layout_marginBottom="@dimen/dd_dimen_50px" />

        <TextView
            android:id="@+id/tv_home_item_sign"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dd_dimen_85px"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="@dimen/dd_dimen_50px"
            android:layout_marginLeft="@dimen/dd_dimen_60px"
            android:layout_marginRight="@dimen/dd_dimen_60px"
            android:background="@drawable/shape_home_item_tv_sign_bg"
            android:gravity="center"
            android:text="抢先报名"
            android:textColor="@color/common_white"
            android:textSize="@dimen/dd_dimen_36px" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_home_2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl_title"
        android:background="@drawable/icon_home_bgs"
        android:orientation="vertical"
        android:visibility="gone" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="@dimen/dd_dimen_200px"
            android:layout_height="@dimen/dd_dimen_200px"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="107dp"
            android:src="@drawable/wicon_waifi" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dd_dimen_36px"
            android:gravity="center_vertical|left"
            android:paddingLeft="@dimen/dd_dimen_20px"
            android:text="未加载成功,请检查网络"
            android:textColor="@color/common_white"
            android:textSize="@dimen/dd_dimen_36px" />

        <TextView
            android:id="@+id/tv_hemo_chongshi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dd_dimen_40px"
            android:background="@drawable/shape_home_item_tv_sign_bg"
            android:gravity="center"
            android:paddingBottom="@dimen/dd_dimen_10px"
            android:paddingLeft="@dimen/dd_dimen_40px"
            android:paddingRight="@dimen/dd_dimen_40px"
            android:paddingTop="@dimen/dd_dimen_10px"
            android:text="打开网络设置"
            android:textColor="@color/common_white"
            android:textSize="@dimen/dd_dimen_36px" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_home_3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl_title"
        android:background="@drawable/icon_home_bgs"
        android:orientation="vertical"
        android:visibility="gone" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_current_picture"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dd_dimen_76px"
            android:gravity="center_horizontal"
            android:text="当前您的范围内没有订单需求,请您稍后重试"
            android:textColor="@color/common_white"
            android:textSize="@dimen/dd_dimen_26px" />

        <ImageView
            android:id="@+id/tv_current_picture"
            android:layout_width="@dimen/dd_dimen_233px"
            android:layout_height="@dimen/dd_dimen_233px"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dd_dimen_87px"
            android:src="@drawable/icon_meidingdan"
            android:textColor="@color/common_CCCCCC"
            android:textSize="@dimen/dd_dimen_32px" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tv_hemo_peixun"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/dd_dimen_40px"
            android:text="提升职业能力,赢取更多高薪机会"
            android:textColor="@color/common_CCCCCC"
            android:textSize="@dimen/dd_dimen_23px" />

        <TextView
            android:id="@+id/tv_hemo_peixun"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dd_dimen_85px"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/dd_dimen_50px"
            android:layout_marginLeft="@dimen/dd_dimen_60px"
            android:layout_marginRight="@dimen/dd_dimen_60px"
            android:background="@drawable/shape_home_item_tv_sign_bg"
            android:gravity="center"
            android:text="进入培训专区"
            android:textColor="@color/common_white"
            android:textSize="@dimen/dd_dimen_36px" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_home_4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl_title"
        android:background="@drawable/icon_home_bgs"
        android:orientation="vertical"
        android:visibility="gone" >

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="@dimen/dd_dimen_233px"
            android:layout_height="@dimen/dd_dimen_233px"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dd_dimen_87px"
            android:src="@drawable/icon_meidingdan"
            android:textColor="@color/common_CCCCCC"
            android:textSize="@dimen/dd_dimen_32px" />

        <TextView
            android:id="@+id/tv_hemo_denglu"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dd_dimen_85px"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/dd_dimen_50px"
            android:layout_marginLeft="@dimen/dd_dimen_60px"
            android:layout_marginRight="@dimen/dd_dimen_60px"
            android:background="@drawable/shape_home_item_tv_sign_bg"
            android:gravity="center"
            android:text="立即登录"
            android:textColor="@color/common_white"
            android:textSize="@dimen/dd_dimen_36px" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:gravity="center_horizontal"
            android:text="我们为已登录用户提供智能推荐订单"
            android:textColor="@color/common_white"
            android:textSize="@dimen/dd_dimen_26px" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_home_5"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl_title"
        android:background="@drawable/icon_home_bgs"
        android:orientation="vertical"
        android:visibility="gone" >

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="@dimen/dd_dimen_233px"
            android:layout_height="@dimen/dd_dimen_233px"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dd_dimen_87px"
            android:src="@drawable/icon_meidingdan"
            android:textColor="@color/common_CCCCCC"
            android:textSize="@dimen/dd_dimen_32px" />

        <TextView
            android:id="@+id/tv_hemo_denglu1"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dd_dimen_85px"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/dd_dimen_50px"
            android:layout_marginLeft="@dimen/dd_dimen_60px"
            android:layout_marginRight="@dimen/dd_dimen_60px"
            android:background="@drawable/shape_home_item_tv_sign_bg"
            android:gravity="center"
            android:text="重新审核身份"
            android:textColor="@color/common_white"
            android:textSize="@dimen/dd_dimen_36px" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:gravity="center_horizontal"
            android:text="您的身份信息没有通过，请重新提交方可抢单"
            android:textColor="@color/common_white"
            android:textSize="@dimen/dd_dimen_26px" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_home_6"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl_title"
        android:background="@drawable/icon_home_bgs"
        android:orientation="vertical"
        android:visibility="gone" >

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="@dimen/dd_dimen_233px"
            android:layout_height="@dimen/dd_dimen_233px"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dd_dimen_87px"
            android:src="@drawable/icon_meidingdan"
            android:textColor="@color/common_CCCCCC"
            android:textSize="@dimen/dd_dimen_32px" />

        <TextView
            android:id="@+id/tv_hemo_denglu2"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dd_dimen_85px"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/dd_dimen_50px"
            android:layout_marginLeft="@dimen/dd_dimen_60px"
            android:layout_marginRight="@dimen/dd_dimen_60px"
            android:background="@drawable/shape_home_item_tv_sign_bg"
            android:gravity="center"
            android:text="重新审核身份"
            android:textColor="@color/common_white"
            android:textSize="@dimen/dd_dimen_36px"
            android:visibility="gone" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView4"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:gravity="center_horizontal"
            android:text="您的身份信息正在审核中"
            android:textColor="@color/common_white"
            android:textSize="@dimen/dd_dimen_26px" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_home_7"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dd_dimen_75px"
        android:layout_below="@+id/rl_title"
        android:background="@drawable/icon_chahaobeijing"
        android:orientation="vertical"
        android:visibility="gone" >

        <TextView
            android:id="@+id/tv_home_tz_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center_horizontal"
            android:text=""
            android:textColor="#ff971e"
            android:textSize="@dimen/dd_dimen_30px" />

        <TextView
            android:id="@+id/tv_home_tz_cha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dd_dimen_30px"
            android:background="@drawable/icon_chahao"
            android:gravity="center_horizontal"
            android:textColor="#ff971e"
            android:textSize="@dimen/dd_dimen_30px" />
    </RelativeLayout>

</RelativeLayout>
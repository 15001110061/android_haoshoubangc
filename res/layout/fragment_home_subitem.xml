<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="@dimen/dd_dimen_40px"
    android:paddingLeft="@dimen/dd_dimen_50px"
    android:paddingRight="@dimen/dd_dimen_50px"
    android:paddingTop="@dimen/dd_dimen_40px" >

    <TextView
        android:id="@+id/tv_home_item_title"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dd_dimen_76px"
        android:background="@drawable/shape_home_item_tv_bg"
        android:gravity="center"
        android:text="七天连锁"
        android:textColor="@color/common_text"
        android:textSize="@dimen/dd_dimen_30px" />

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/tv_home_item_title"
        android:layout_marginBottom="@dimen/dd_dimen_180px"
        android:background="@drawable/shape_home_item_rl_bg"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/rl_home_item_a"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dd_dimen_50px"
            android:layout_marginRight="@dimen/dd_dimen_50px"
            android:layout_marginTop="@dimen/dd_dimen_20px" >

            <ImageView
                android:id="@+id/iv_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_shijian" />

            <TextView
                android:id="@+id/tv_home_item_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dd_dimen_40px"
                android:layout_toRightOf="@id/iv_3"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="明天上午"
                android:textColor="@color/common_text"
                android:textSize="@dimen/dd_dimen_36px" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_home_item_b"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl_home_item_a"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/dd_dimen_50px"
            android:layout_marginRight="@dimen/dd_dimen_50px"
            android:layout_marginTop="@dimen/dd_dimen_60px" >

            <ImageView
                android:id="@+id/iv_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_dizhi" />

            <TextView
                android:id="@+id/tv_home_item_site"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dd_dimen_40px"
                android:layout_toRightOf="@id/iv_4"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="地点"
                android:textColor="@color/common_text"
                android:textSize="@dimen/dd_dimen_36px" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_home_item_openings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl_home_item_b"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dd_dimen_30px"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="名额"
            android:textColor="@color/common_text"
            android:textSize="@dimen/dd_dimen_36px" />

        <LinearLayout
            android:id="@+id/ll_home_item_a"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_home_item_openings"
            android:layout_marginTop="@dimen/dd_dimen_30px"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <RelativeLayout
                android:id="@+id/rl_home_item_c"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center" >

                <ImageView
                    android:layout_width="@dimen/dd_dimen_100px"
                    android:layout_height="@dimen/dd_dimen_100px"
                    android:layout_gravity="center"
                    android:background="@drawable/icon_dashang" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_home_item_d"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center" >

                <ImageView
                    android:layout_width="@dimen/dd_dimen_100px"
                    android:layout_height="@dimen/dd_dimen_100px"
                    android:layout_weight="1"
                    android:background="@drawable/icon_xianjin" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_home_item_e"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center" >

                <ImageView
                    android:layout_width="@dimen/dd_dimen_100px"
                    android:layout_height="@dimen/dd_dimen_100px"
                    android:layout_weight="1"
                    android:background="@drawable/icon_wucan" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_home_item_f"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
              >

                <ImageView
                    android:layout_width="@dimen/dd_dimen_100px"
                    android:layout_height="@dimen/dd_dimen_100px"
                    android:layout_weight="1"
                    android:background="@drawable/ic_launcher" />
            </RelativeLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_home_item_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_home_item_a"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dd_dimen_40px"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="预计可挣0元"
            android:textColor="@color/common_text"
            android:textSize="@dimen/dd_dimen_36px" />

        <TextView
            android:id="@+id/tv_home_item_voice "
            android:layout_width="@dimen/dd_dimen_120px"
            android:layout_height="@dimen/dd_dimen_60px"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/icon_yuyinbobao"
            android:scaleType="fitXY" />
    </RelativeLayout>



</RelativeLayout>
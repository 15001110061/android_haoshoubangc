<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/common_grey" >

    <TextView
        android:id="@+id/tv_message_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dd_dimen_10px"
        android:layout_marginTop="@dimen/dd_dimen_25px"
        android:text="2015-1-1"
        android:textColor="@color/common_CCCCCC"
        android:textSize="@dimen/dd_dimen_24px" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_message_time"
        android:layout_marginLeft="@dimen/dd_dimen_20px"
        android:layout_marginRight="@dimen/dd_dimen_20px"
        android:background="@drawable/shape_current_item_rl_bg"
        android:paddingLeft="@dimen/dd_dimen_20px"
        android:paddingRight="@dimen/dd_dimen_20px" >

        <TextView
            android:id="@+id/tv_message_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="@dimen/dd_dimen_22px"
            android:layout_marginTop="@dimen/dd_dimen_22px"
            android:text="2015-1-1"
            android:textColor="@color/common_text"
            android:textSize="@dimen/dd_dimen_30px" />

        <ImageView
            android:id="@+id/iv_message_picture"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dd_dimen_370px"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/tv_message_title"
            android:scaleType="fitXY"
            android:src="@drawable/icon_loadfailed_bgs" />

        <TextView
            android:id="@+id/tv_message_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/iv_message_picture"
            android:layout_marginTop="@dimen/dd_dimen_22px"
            android:paddingBottom="@dimen/dd_dimen_22px"
            android:text="message"
            android:textColor="@color/common_666666"
            android:textSize="@dimen/dd_dimen_24px" />

        <RelativeLayout
            android:id="@+id/relativeLayout1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_message_message" >

            <View
                android:id="@+id/view1"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dd_dimen_1px"
                android:layout_alignParentLeft="true"
                android:background="@color/devide_line" />

            <TextView
                android:id="@+id/tv_message_but"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:paddingBottom="@dimen/dd_dimen_22px"
                android:paddingTop="@dimen/dd_dimen_22px"
                android:text="点击查看详情"
                android:textColor="@color/common_text"
                android:textSize="@dimen/dd_dimen_24px" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:contentDescription="@string/app_name"
                android:scaleType="fitXY"
                android:src="@drawable/icons_arrow" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>
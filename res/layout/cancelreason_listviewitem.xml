<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dd_dimen_15px"
    android:layout_marginRight="@dimen/dd_dimen_15px"
    android:background="@color/common_grey"
    android:orientation="horizontal" >

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dd_dimen_125px"
        android:layout_marginTop="@dimen/dd_dimen_26px"
        android:background="@color/common_white"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/item_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dd_dimen_45px"
            android:gravity="center_vertical"
            android:text="" 
            android:textColor="@color/common_666666"
            android:textSize="@dimen/dd_dimen_30px" />

        <CheckBox
            android:id="@+id/item_cb"
            style="@style/CustomCheckboxTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/item_tv"
            android:layout_alignBottom="@+id/item_tv"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dd_dimen_15px"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:gravity="center_vertical" />
    </RelativeLayout>

</RelativeLayout>
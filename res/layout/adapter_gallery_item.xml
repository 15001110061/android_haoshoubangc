<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/tv_home_titlename"
        android:layout_marginTop="@dimen/dd_dimen_30px"
        android:background="@drawable/shape_home_item_bgone" >

        <LinearLayout
            android:id="@+id/relativeLayout1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/rl_home_item_a"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dd_dimen_74px"
                android:layout_marginRight="@dimen/dd_dimen_74px"
                android:layout_marginTop="@dimen/dd_dimen_30px" >

                <ImageView
                    android:id="@+id/iv_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/icon_shijian" />

                <TextView
                    android:id="@+id/tv_home_item_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dd_dimen_34px"
                    android:layout_marginRight="@dimen/dd_dimen_34px"
                    android:layout_toRightOf="@id/iv_3"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="明天上午9.00街"
                    android:textColor="@color/common_text"
                    android:textSize="@dimen/dd_dimen_30px" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_home_item_c"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dd_dimen_74px"
                android:layout_marginRight="@dimen/dd_dimen_74px"
                android:layout_marginTop="@dimen/dd_dimen_30px" >

                <ImageView
                    android:id="@+id/iv_8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/icon_fangjianshu" />

                <TextView
                    android:id="@+id/tv_home_item_time2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dd_dimen_34px"
                    android:layout_marginRight="@dimen/dd_dimen_34px"
                    android:layout_toRightOf="@id/iv_8"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="预计清洁:0间"
                    android:textColor="@color/common_text"
                    android:textSize="@dimen/dd_dimen_30px" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_home_item_b"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dd_dimen_74px"
                android:layout_marginRight="@dimen/dd_dimen_60px"
                android:layout_marginTop="@dimen/dd_dimen_30px" >

                <ImageView
                    android:id="@+id/iv_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/icon_dizhi" />

                <TextView
                    android:id="@+id/tv_home_item_site"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dd_dimen_34px"
                    android:layout_marginRight="@dimen/dd_dimen_34px"
                    android:layout_toRightOf="@id/iv_4"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="北京市朝阳区丽泽中街"
                    android:textColor="@color/common_text"
                    android:textSize="@dimen/dd_dimen_30px" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:contentDescription="@string/app_name"
                    android:scaleType="fitXY"
                    android:src="@drawable/icons_arrows" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/ll_home_item_b"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dd_dimen_20px"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal" >

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tv_home_item_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dd_dimen_92px"
                        android:ellipsize="end"
                        android:text="房间单价"
                        android:textColor="@color/common_text"
                        android:textSize="@dimen/dd_dimen_40px" />

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/rl_home_two"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:text="元"
                        android:textColor="@color/common_text"
                        android:textSize="@dimen/dd_dimen_40px" />

                    <RelativeLayout
                        android:id="@+id/rl_home_two"
                        android:layout_width="@dimen/dd_dimen_100px"
                        android:layout_height="@dimen/dd_dimen_100px"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="15dp"
                        android:layout_toRightOf="@+id/tv_home_item_money"
                        android:gravity="center" >

                        <ImageView
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_alignParentTop="true"
                            android:src="@drawable/icon_color_orange" />

                        <TextView
                            android:id="@+id/tv_home_item_openings2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:layout_weight="1"
                            android:text="0"
                            android:textColor="@color/common_white"
                            android:textSize="@dimen/dd_dimen_36px" />
                    </RelativeLayout>
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/ll_home_item_c"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dd_dimen_20px"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal" >

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tv_home_item_money1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dd_dimen_92px"
                        android:ellipsize="end"
                        android:text="预计可挣"
                        android:textColor="@color/common_text"
                        android:textSize="@dimen/dd_dimen_40px" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/rl_home_two1"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:text="元"
                        android:textColor="@color/common_text"
                        android:textSize="@dimen/dd_dimen_40px" />

                    <RelativeLayout
                        android:id="@+id/rl_home_two1"
                        android:layout_width="@dimen/dd_dimen_100px"
                        android:layout_height="@dimen/dd_dimen_100px"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="15dp"
                        android:layout_toRightOf="@+id/tv_home_item_money1"
                        android:gravity="center" >

                        <ImageView
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_alignParentTop="true"
                            android:src="@drawable/icon_color_orange" />

                        <TextView
                            android:id="@+id/tv_home_item_openings"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:layout_weight="1"
                            android:text="0"
                            android:textColor="@color/common_white"
                            android:textSize="@dimen/dd_dimen_36px" />
                    </RelativeLayout>
                </RelativeLayout>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll_home_item_a"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ll_home_item_c"
                android:layout_marginLeft="@dimen/dd_dimen_40px"
                android:layout_marginRight="@dimen/dd_dimen_40px"
                android:layout_weight="2"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <RelativeLayout
                    android:id="@+id/rl_home_item_w"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center" >

                    <TextView
                        android:id="@+id/iv_home_item_c"
                        android:layout_width="@dimen/dd_dimen_100px"
                        android:layout_height="@dimen/dd_dimen_100px"
                        android:layout_gravity="center"
                        android:background="@drawable/icon_dashang" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_home_item_d"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center" >

                    <TextView
                        android:id="@+id/iv_home_item_d"
                        android:layout_width="@dimen/dd_dimen_100px"
                        android:layout_height="@dimen/dd_dimen_100px"
                        android:layout_weight="1"
                        android:background="@drawable/icon_xianjin" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_home_item_e"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center" >

                    <TextView
                        android:id="@+id/iv_home_item_e"
                        android:layout_width="@dimen/dd_dimen_100px"
                        android:layout_height="@dimen/dd_dimen_100px"
                        android:layout_weight="1"
                        android:background="@drawable/icon_wucan" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_home_item_f"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center" >

                    <ImageView
                        android:layout_width="@dimen/dd_dimen_100px"
                        android:layout_height="@dimen/dd_dimen_100px"
                        android:layout_weight="1"
                        android:background="@drawable/icon_youxiaoba_sel" />
                </RelativeLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dd_dimen_90px" >

                <TextView
                    android:id="@+id/tv_home_item_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/iv_home_item_voice"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="@dimen/dd_dimen_10px"
                    android:ellipsize="end"
                    android:text="0/0"
                    android:textColor="@color/light_black"
                    android:textSize="@dimen/dd_dimen_36px" />

                <ImageView
                    android:id="@+id/iv_home_item_voice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dd_dimen_20px"
                    android:background="@drawable/icon_yuyinbobao"
                    android:textColor="@color/common_text"
                    android:textSize="@dimen/dd_dimen_30px" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_home_titlename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dd_dimen_30px"
        android:ellipsize="end"
        android:gravity="top"
        android:singleLine="true"
        android:text="7天连锁酒店"
        android:textColor="@color/common_white"
        android:textSize="@dimen/dd_dimen_34px" />
<TextView
        android:id="@+id/tv_home_is_changqi"
        android:layout_width="@dimen/dd_dimen_110px"
        android:layout_height="@dimen/dd_dimen_110px"
        android:layout_alignRight="@+id/relativeLayout2"
        android:layout_alignTop="@+id/relativeLayout2"
        android:background="@drawable/icon_changqi"
        android:gravity="right" />

    </RelativeLayout>

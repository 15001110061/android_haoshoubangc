<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/common_grey"
    android:orientation="vertical" >

    <include
        android:id="@+id/include_stub_title"
        layout="@layout/stub_title" />

    <RelativeLayout
        android:id="@+id/rl_my_3"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dd_dimen_124px"
        android:layout_below="@id/include_stub_title"
        android:background="@color/common_white"
        android:paddingBottom="@dimen/dd_dimen_10px"
        android:paddingTop="@dimen/dd_dimen_10px" >

        <ImageView
            android:id="@+id/iv_my_pic2"
            android:layout_width="@dimen/dd_dimen_96px"
            android:layout_height="@dimen/dd_dimen_96px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dd_dimen_45px"
            android:contentDescription="@string/app_name"
            android:scaleType="fitXY"
            android:src="@drawable/icon_gantanhao" />

        <TextView
            android:id="@+id/tv_my_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dd_dimen_25px"
            android:layout_toRightOf="@+id/iv_my_pic2"
            android:text="请谨慎操作"
            android:textColor="@color/common_text"
            android:textSize="@dimen/dd_dimen_34px" />

        <TextView
            android:layout_width="wrap_content"
             android:layout_marginTop="@dimen/dd_dimen_10px"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_my_logo"
            android:layout_below="@+id/tv_my_logo"
            android:text="取消订单次数过多系统会降低您的信用评级"
            android:textColor="@color/common_message"
            android:textSize="@dimen/dd_dimen_28px" />
    </RelativeLayout>

    <ListView
        android:id="@+id/lv"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_my_3"
        android:layout_marginTop="@dimen/dd_dimen_20px"
        android:divider="@null"
        android:scrollingCache="false" />

    <TextView
        android:id="@+id/tv_cancelreason_submitted"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dd_dimen_100px"
        android:layout_below="@id/lv"
        android:layout_marginLeft="@dimen/dd_dimen_60px"
        android:layout_marginRight="@dimen/dd_dimen_60px"
        android:layout_marginTop="@dimen/dd_dimen_59px"
        android:background="@drawable/shape_home_item_tv_sign_bg"
        android:gravity="center"
        android:text="我要取消订单"
        android:textColor="@color/common_white"
        android:textSize="@dimen/dd_dimen_36px" />
    
    
    
    
     <TextView
        android:id="@+id/tv_cancelreason_dengdeng"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dd_dimen_100px"
        android:layout_below="@id/tv_cancelreason_submitted"
        android:layout_marginLeft="@dimen/dd_dimen_60px"
        android:layout_marginRight="@dimen/dd_dimen_60px"
        android:layout_marginTop="@dimen/dd_dimen_20px"
        android:background="@drawable/shape_int_queren_xinyong3"
        android:gravity="center"
        android:text="再等等"
        android:textColor="@color/common_text"
        android:textSize="@dimen/dd_dimen_36px" />

</RelativeLayout>
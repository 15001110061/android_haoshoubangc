<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"

    android:background="@drawable/icon_home_bgs"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="fill_parent"
        android:layout_height="44dp"
        android:background="@color/common_FF971E"
        android:gravity="center_vertical" >

        <LinearLayout
            android:id="@+id/ll_title_left"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:gravity="center_vertical|left"
            android:minWidth="@dimen/dd_dimen_40px"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_title_left"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:padding="@dimen/dd_dimen_30px"
                android:src="@drawable/stub_back" />

            <View
                android:layout_width="@dimen/dd_dimen_3px"
                android:layout_height="@dimen/dd_dimen_40px"
                android:background="#3b3b4e"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_title_left"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center_vertical|left"
                android:paddingLeft="@dimen/dd_dimen_20px"
                android:paddingRight="@dimen/dd_dimen_20px"
                android:text="New Text"
                android:textColor="@color/common_white"
                android:textSize="@dimen/dd_dimen_32px"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_title_right"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:gravity="center_vertical|right"
            android:minWidth="@dimen/dd_dimen_40px"
            android:orientation="horizontal"
            android:visibility="gone" >

            <ImageView
                android:id="@+id/iv_title_right"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:padding="@dimen/dd_dimen_20px"
                android:src="@drawable/icon_shuaxin" />

            <TextView
                android:id="@+id/tv_title_right"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center_vertical|right"
                android:paddingRight="@dimen/dd_dimen_20px"
                android:text="New Text"
                android:textColor="@color/common_white"
                android:textSize="@dimen/dd_dimen_32px"
                android:visibility="gone" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dd_dimen_26px"
            android:ellipsize="end"
            android:gravity="left"
            android:singleLine="true"
            android:text="您获得了一个订单邀请"
            android:textColor="@color/common_white"
            android:textSize="@dimen/dd_dimen_32px" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_home_titlename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dd_dimen_30px"
        android:ellipsize="end"
        android:gravity="top"
        android:singleLine="true"
        android:text="酒店名称"
        android:textColor="@color/common_white"
        android:textSize="@dimen/dd_dimen_34px" />

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_sing_baoming"
        android:layout_below="@id/tv_home_titlename"
        android:layout_marginBottom="@dimen/dd_dimen_45px"
        android:layout_marginLeft="@dimen/dd_dimen_90px"
        android:layout_marginRight="@dimen/dd_dimen_90px"
        android:layout_marginTop="@dimen/dd_dimen_20px"
        android:background="@drawable/shape_home_item_bgone" >

        <LinearLayout
            android:id="@+id/relativeLayout1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/rl_home_item_a"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dd_dimen_74px"
                android:layout_marginRight="@dimen/dd_dimen_74px"
                android:layout_marginTop="@dimen/dd_dimen_40px" >

                <ImageView
                    android:id="@+id/iv_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/icon_shijian" />

                <com.cgzz.job.view.MarqueeTextView
                    android:id="@+id/tv_home_item_time"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dd_dimen_34px"
                    android:layout_marginRight="@dimen/dd_dimen_34px"
                    android:layout_toRightOf="@id/iv_3"
                    
                    
                    android:gravity="center_vertical"
                    
                                        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:singleLine="true"
                    
                    
                    
                    
                    android:text="时间"
                    android:textColor="@color/common_text"
                    android:textSize="@dimen/dd_dimen_36px" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_home_item_n"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dd_dimen_74px"
                android:layout_marginRight="@dimen/dd_dimen_74px"
                android:layout_marginTop="@dimen/dd_dimen_40px" >

                <ImageView
                    android:id="@+id/iv_8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/icon_fangjianshu" />

                <com.cgzz.job.view.MarqueeTextView
                    android:id="@+id/tv_home_item_time2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dd_dimen_34px"
                    android:layout_marginRight="@dimen/dd_dimen_34px"
                    android:layout_toRightOf="@id/iv_8"
                    
                    
                    
                            android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:singleLine="true"
                    
                    
                    
                    
                    
                    
                    android:gravity="center_vertical"
                    android:text="预计清洁:"
                    android:textColor="@color/common_text"
                    android:textSize="@dimen/dd_dimen_36px" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_home_item_b"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dd_dimen_74px"
                android:layout_marginRight="@dimen/dd_dimen_74px"
                android:layout_marginTop="@dimen/dd_dimen_40px" >

                <ImageView
                    android:id="@+id/iv_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/icon_dizhi" />

                <TextView
                    android:id="@+id/tv_home_item_site"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dd_dimen_34px"
                    android:layout_marginRight="@dimen/dd_dimen_34px"
                    android:layout_toRightOf="@id/iv_4"
                    android:ellipsize="marquee"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:gravity="center_vertical"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:text="地点"
                    android:textColor="@color/common_text"
                    android:textSize="@dimen/dd_dimen_36px" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:contentDescription="@string/app_name"
                    android:scaleType="fitXY"
                    android:src="@drawable/icons_arrows" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/ll_home_item_b"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dd_dimen_20px"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal" >

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tv_home_item_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dd_dimen_100px"
                        android:ellipsize="end"
                        android:text="房间单价"
                        android:textColor="@color/common_text"
                        android:textSize="@dimen/dd_dimen_40px" />

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/rl_home_two"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:text="元"
                        android:textColor="@color/common_text"
                        android:textSize="@dimen/dd_dimen_40px" />

                    <RelativeLayout
                        android:id="@+id/rl_home_two"
                        android:layout_width="@dimen/dd_dimen_100px"
                        android:layout_height="@dimen/dd_dimen_100px"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="15dp"
                        android:layout_toRightOf="@+id/tv_home_item_money"
                        android:gravity="center" >

                        <ImageView
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_alignParentTop="true"
                            android:src="@drawable/icon_color_orange" />

                        <TextView
                            android:id="@+id/tv_home_item_openings2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:layout_weight="1"
                            android:text="0"
                            android:textColor="@color/common_white"
                            android:textSize="@dimen/dd_dimen_36px" />
                    </RelativeLayout>
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/ll_home_item_f"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal" >

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tv_home_item_money2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dd_dimen_100px"
                        android:ellipsize="end"
                        android:text="预计可挣"
                        android:textColor="@color/common_text"
                        android:textSize="@dimen/dd_dimen_40px" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/rl_home_two2"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:text="元"
                        android:textColor="@color/common_text"
                        android:textSize="@dimen/dd_dimen_40px" />

                    <RelativeLayout
                        android:id="@+id/rl_home_two2"
                        android:layout_width="@dimen/dd_dimen_100px"
                        android:layout_height="@dimen/dd_dimen_100px"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="15dp"
                        android:layout_toRightOf="@+id/tv_home_item_money2"
                        android:gravity="center" >

                        <ImageView
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_alignParentTop="true"
                            android:src="@drawable/icon_color_orange" />

                        <TextView
                            android:id="@+id/tv_home_item_openings"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:layout_weight="1"
                            android:text="0"
                            android:textColor="@color/common_white"
                            android:textSize="@dimen/dd_dimen_36px" />
                    </RelativeLayout>
                </RelativeLayout>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll_home_item_a"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dd_dimen_20px"
                android:layout_marginLeft="@dimen/dd_dimen_40px"
                android:layout_marginRight="@dimen/dd_dimen_40px"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <RelativeLayout
                    android:id="@+id/rl_home_item_c"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center" >

                    <TextView
                        android:id="@+id/iv_home_item_c1"
                        android:layout_width="@dimen/dd_dimen_100px"
                        android:layout_height="@dimen/dd_dimen_100px"
                        android:layout_gravity="center"
                        android:background="@drawable/icon_dashang" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_home_item_d"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center" >

                    <TextView
                        android:id="@+id/iv_home_item_d1"
                        android:layout_width="@dimen/dd_dimen_100px"
                        android:layout_height="@dimen/dd_dimen_100px"
                        android:layout_weight="1"
                        android:background="@drawable/icon_xianjin" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_home_item_e"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center" >

                    <TextView
                        android:id="@+id/iv_home_item_e1"
                        android:layout_width="@dimen/dd_dimen_100px"
                        android:layout_height="@dimen/dd_dimen_100px"
                        android:layout_weight="1"
                        android:background="@drawable/icon_wucan" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_home_item_f"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center" >

                    <ImageView
                        android:layout_width="@dimen/dd_dimen_100px"
                        android:layout_height="@dimen/dd_dimen_100px"
                        android:layout_weight="1"
                        android:background="@drawable/icon_youxiaoba_sel" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_sing_jiedan"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dd_dimen_80px"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="@dimen/dd_dimen_30px"
        android:layout_marginLeft="@dimen/dd_dimen_70px"
        android:layout_marginRight="@dimen/dd_dimen_70px"
        android:background="@drawable/shape_int_queren_xinyong3"
        android:gravity="center"
        android:text="忽略"
        android:textColor="@color/common_text"
        android:textSize="@dimen/dd_dimen_36px" />

    <TextView
        android:id="@+id/tv_sing_baoming"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dd_dimen_80px"
        android:layout_above="@+id/tv_sing_jiedan"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="@dimen/dd_dimen_30px"
        android:layout_marginLeft="@dimen/dd_dimen_70px"
        android:layout_marginRight="@dimen/dd_dimen_70px"
        android:background="@drawable/shape_home_item_tv_sign_bg"
        android:gravity="center"
        android:text="我要接单"
        android:textColor="@color/common_white"
        android:textSize="@dimen/dd_dimen_36px" />

    <TextView
        android:id="@+id/tv_home_is_changqi"
        android:layout_width="@dimen/dd_dimen_110px"
        android:layout_height="@dimen/dd_dimen_110px"
        android:layout_alignRight="@+id/relativeLayout2"
        android:layout_alignTop="@+id/relativeLayout2"
        android:background="@drawable/icon_changqi"
        android:gravity="right" />

</RelativeLayout>
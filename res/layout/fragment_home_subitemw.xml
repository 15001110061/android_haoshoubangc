<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dd_dimen_30px"
    android:paddingRight="@dimen/dd_dimen_30px"
    android:paddingTop="@dimen/dd_dimen_40px" >

    <RelativeLayout
        android:id="@+id/rl_home_one"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dd_dimen_76px"
        android:background="@drawable/shape_home_item_tv_bg" >

        <TextView
            android:id="@+id/tv_home_item_title"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="七天连锁"
            android:textColor="@color/common_white"
            android:textSize="@dimen/dd_dimen_30px" />

        <ImageView
            android:id="@+id/iv_home_item_voice"
            android:layout_width="@dimen/dd_dimen_50px"
            android:layout_height="@dimen/dd_dimen_50px"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dd_dimen_25px"
            android:background="@drawable/icon_yuyinbobao"
            android:textColor="@color/common_text"
            android:textSize="@dimen/dd_dimen_30px" />

        <ImageView
            android:id="@+id/iv_home_item_detailed"
            android:layout_width="@dimen/dd_dimen_50px"
            android:layout_height="@dimen/dd_dimen_50px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dd_dimen_25px"
            android:background="@drawable/icon_xiangqing"
            android:textColor="@color/common_text"
            android:textSize="@dimen/dd_dimen_30px" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/rl_home_one"
        android:layout_marginBottom="@dimen/dd_dimen_130px"
        android:background="@drawable/shape_home_item_rl_bg"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/rl_home_item_a"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dd_dimen_50px"
            android:layout_marginRight="@dimen/dd_dimen_50px"
            android:layout_marginTop="@dimen/dd_dimen_20px"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/iv_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_shijian" />

            <TextView
                android:id="@+id/tv_home_item_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dd_dimen_40px"
                android:layout_toRightOf="@id/iv_3"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="明天上午"
                android:textColor="@color/common_text"
                android:textSize="@dimen/dd_dimen_36px" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_home_item_b"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl_home_item_a"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/dd_dimen_50px"
            android:layout_marginRight="@dimen/dd_dimen_50px"
            android:layout_marginTop="@dimen/dd_dimen_60px"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/iv_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_dizhi" />

            <TextView
                android:id="@+id/tv_home_item_site"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dd_dimen_40px"
                android:layout_toRightOf="@id/iv_4"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="地点"
                android:textColor="@color/common_text"
                android:textSize="@dimen/dd_dimen_36px" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/ll_home_item_b"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_home_item_openings"
            android:layout_marginTop="@dimen/dd_dimen_30px"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_home_item_openings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/textView1"
                android:layout_weight="1"
                android:ellipsize="end"
                android:text="20"
                android:textColor="@color/common_yellow"
                android:textSize="@dimen/dd_dimen_36px" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/tv_home_item_openings"
                android:layout_alignBottom="@+id/tv_home_item_openings"
                android:layout_centerHorizontal="true"
                android:layout_weight="1"
                android:ellipsize="end"
                android:text="房间单价"
                android:textColor="@color/common_text"
                android:textSize="@dimen/dd_dimen_36px" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/tv_home_item_openings"
                android:layout_weight="1"
                android:ellipsize="end"
                android:text="元"
                android:textColor="@color/common_text"
                android:textSize="@dimen/dd_dimen_36px" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_home_item_a"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_home_item_b"
            android:layout_marginTop="@dimen/dd_dimen_30px"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <RelativeLayout
                android:id="@+id/rl_home_item_c"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center" >

                <ImageView
                    android:layout_width="@dimen/dd_dimen_100px"
                    android:layout_height="@dimen/dd_dimen_100px"
                    android:layout_gravity="center"
                    android:background="@drawable/icon_dashang" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_home_item_d"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center" >

                <ImageView
                    android:layout_width="@dimen/dd_dimen_100px"
                    android:layout_height="@dimen/dd_dimen_100px"
                    android:layout_weight="1"
                    android:background="@drawable/icon_xianjin" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_home_item_e"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center" >

                <ImageView
                    android:layout_width="@dimen/dd_dimen_100px"
                    android:layout_height="@dimen/dd_dimen_100px"
                    android:layout_weight="1"
                    android:background="@drawable/icon_wucan" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_home_item_f"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:visibility="gone" >

                <ImageView
                    android:layout_width="@dimen/dd_dimen_100px"
                    android:layout_height="@dimen/dd_dimen_100px"
                    android:layout_weight="1"
                    android:background="@drawable/ic_launcher" />
            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/ll_home_item_b"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_home_item_openings"
            android:layout_marginTop="@dimen/dd_dimen_30px"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_home_item_openings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/tv_home_item_money"
                android:layout_weight="1"
                android:ellipsize="end"
                android:text="20"
                android:textColor="@color/common_yellow"
                android:textSize="@dimen/dd_dimen_40px" />

            <TextView
                android:id="@+id/tv_home_item_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/tv_home_item_openings"
                android:layout_alignBottom="@+id/tv_home_item_openings"
                android:layout_centerHorizontal="true"
                android:layout_weight="1"
                android:ellipsize="end"
                android:text="预计可挣"
                android:textColor="@color/common_text"
                android:textSize="@dimen/dd_dimen_40px" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/tv_home_item_openings"
                android:layout_weight="1"
                android:ellipsize="end"
                android:text="元"
                android:textColor="@color/common_text"
                android:textSize="@dimen/dd_dimen_40px" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>
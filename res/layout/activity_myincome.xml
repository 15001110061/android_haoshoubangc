<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_seting_two"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/common_grey" >

<RelativeLayout 
    android:id="@+id/rl_title"
    android:layout_width="fill_parent"
    android:layout_height="44dp"
    android:background="@color/common_white"
    android:gravity="center_vertical" >

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/ll_title_right"
        android:layout_toRightOf="@+id/ll_title_left"
        android:ellipsize="end"
        android:gravity="left"
        android:singleLine="true"
        android:text="New Text"
        android:textColor="@color/common_text"
        android:textSize="@dimen/dd_dimen_32px" />

    <LinearLayout
        android:id="@+id/ll_title_left"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:gravity="center_vertical|left"
        android:minWidth="@dimen/dd_dimen_40px"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_title_left"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:padding="@dimen/dd_dimen_30px"
            android:src="@drawable/stub_back" /> 

        <View
            android:layout_width="@dimen/dd_dimen_3px"
            android:visibility="gone"
            android:layout_height="@dimen/dd_dimen_40px"
            android:background="#3b3b4e" />

        <TextView
            android:id="@+id/tv_title_left"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center_vertical|left"
            android:paddingLeft="@dimen/dd_dimen_20px"
            android:paddingRight="@dimen/dd_dimen_20px"
            android:text="New Text"
            android:textColor="@color/common_white"
            android:textSize="@dimen/dd_dimen_32px"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_title_right"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:gravity="center_vertical|right"
        android:minWidth="@dimen/dd_dimen_40px"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_title_right"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:padding="@dimen/dd_dimen_30px"
            android:src="@drawable/stub_back" />

        <TextView
            android:id="@+id/tv_title_right"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center_vertical|right"
            android:paddingRight="@dimen/dd_dimen_20px"
            android:text="New Text"
            android:textColor="@color/common_text"
            android:textSize="@dimen/dd_dimen_32px"
            android:visibility="gone" />
    </LinearLayout>

<View
    android:id="@+id/v_line"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/dd_dimen_1px"
    android:layout_alignParentBottom="true"
    android:layout_alignParentLeft="true"
    android:background="@color/common_grey" />

</RelativeLayout>

    <LinearLayout
        android:id="@+id/two"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_title"
        android:layout_marginTop="@dimen/dd_dimen_20px"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/rl_myincome"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dd_dimen_122px"
            android:background="@color/common_white" >

            <ImageView
                android:id="@+id/iv_4"
                android:layout_width="@dimen/dd_dimen_60px"
                android:layout_height="@dimen/dd_dimen_60px"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dd_dimen_25px"
                android:contentDescription="@string/app_name"
                android:src="@drawable/icon_zichan" />

            <TextView
                android:id="@+id/iv_my_income"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dd_dimen_20px"
                android:layout_toRightOf="@id/iv_4"
                android:gravity="center_vertical"
                android:text="总资产"
                android:textColor="@color/common_text"
                android:textSize="@dimen/dd_dimen_30px" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dd_dimen_20px"
                android:contentDescription="@string/app_name"
                android:scaleType="fitXY"
                android:src="@drawable/icons_arrow" />

            <TextView
                android:id="@+id/tv_myincome_zichan"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignParentTop="true"
                android:layout_marginRight="@dimen/dd_dimen_20px"
                android:layout_toLeftOf="@+id/imageView2"
                android:gravity="center_vertical"
                android:text="0"
                android:textColor="@color/common_text"
                android:textSize="@dimen/dd_dimen_36px" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dd_dimen_122px"
            android:layout_marginTop="@dimen/dd_dimen_20px"
            android:background="@color/common_white" >

            <ImageView
                android:id="@+id/iv_2"
                android:layout_width="@dimen/dd_dimen_60px"
                android:layout_height="@dimen/dd_dimen_60px"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dd_dimen_25px"
                android:contentDescription="@string/app_name"
                android:src="@drawable/icon_zongjifen" />

            <TextView
                android:id="@+id/iv_my_collection"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dd_dimen_20px"
                android:layout_toRightOf="@id/iv_2"
                android:gravity="center_vertical"
                android:text="总积分"
                android:textColor="@color/common_text"
                android:textSize="@dimen/dd_dimen_30px" />

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dd_dimen_20px"
                android:contentDescription="@string/app_name"
                android:scaleType="fitXY"
                android:src="@drawable/icons_arrow"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_myincome_jifen"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="@dimen/dd_dimen_58px"
                android:gravity="center_vertical"
                android:text="0"
                android:textColor="@color/common_text"
                android:textSize="@dimen/dd_dimen_36px" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dd_dimen_1px"
            android:background="@color/common_CCCCCC"
            android:visibility="gone" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dd_dimen_96px"
            android:layout_marginLeft="@dimen/dd_dimen_32px"
            android:layout_marginRight="@dimen/dd_dimen_32px"
            android:visibility="gone" >

            <ImageView
                android:id="@+id/iv_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:contentDescription="@string/app_name"
                android:src="@drawable/icon_xiaoxi" />

            <TextView
                android:id="@+id/iv_my_news"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dd_dimen_20px"
                android:layout_toRightOf="@id/iv_3"
                android:gravity="center_vertical"
                android:text="消息中心"
                android:textColor="@color/common_text" />
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_home_1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/two"
        android:layout_marginTop="@dimen/dd_dimen_36px"
        android:orientation="vertical" >

        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:flipInterval="30"
            android:persistentDrawingCache="animation" >
        </android.support.v4.view.ViewPager>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_home_2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/two"
        android:orientation="vertical"
        android:visibility="gone" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_current_picture"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dd_dimen_87px"
            android:text="没有查询到数据"
            android:textColor="@color/common_CCCCCC"
            android:textSize="@dimen/dd_dimen_46px" />

        <ImageView
            android:id="@+id/tv_current_picture"
            android:layout_width="@dimen/dd_dimen_233px"
            android:layout_height="@dimen/dd_dimen_233px"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dd_dimen_87px"
            android:src="@drawable/icon_nulog_bg"
            android:textColor="@color/common_CCCCCC"
            android:textSize="@dimen/dd_dimen_32px" />
    </RelativeLayout>

</RelativeLayout>